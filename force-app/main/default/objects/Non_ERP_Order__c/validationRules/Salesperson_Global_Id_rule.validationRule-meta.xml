<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Salesperson_Global_Id_rule</fullName>
    <active>true</active>
    <errorConditionFormula>LEN( Salesperson_Global_ID__c ) &lt;&gt; 11 || LEN( Customer_Country_Code__c ) &lt;&gt; 2</errorConditionFormula>
    <errorMessage>Length of SALESPERSON GLOBAL ID should be 11 and CUSTOMER COUNTRY CODE should be 2.</errorMessage>
</ValidationRule>
