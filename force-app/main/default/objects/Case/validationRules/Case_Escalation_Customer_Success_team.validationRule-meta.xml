<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Case_Escalation_Customer_Success_team</fullName>
    <active>true</active>
    <description>reason for cancellation should not be blank if IsEscalated checkbox is checked</description>
    <errorConditionFormula>ISBLANK(Reason_for_Escalating__c ) &amp;&amp; IsEscalated == True</errorConditionFormula>
    <errorDisplayField>Reason_for_Escalating__c</errorDisplayField>
    <errorMessage>Please provide reason for cancellation</errorMessage>
</ValidationRule>
