<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Converted_Opportunity_Amount__c</fullName>
    <description>This field is User for sending data to USM and will contain Opportunity Amount Value in UDS.</description>
    <externalId>false</externalId>
    <formula>IF( ISPICKVAL(CurrencyIsoCode, &quot;USD&quot;), 
(Amount) ,(Amount / Currency_Conversion_Rate__c))</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <label>Converted Opportunity Amount(USD)</label>
    <precision>18</precision>
    <required>false</required>
    <scale>3</scale>
    <trackHistory>false</trackHistory>
    <type>Number</type>
    <unique>false</unique>
</CustomField>
