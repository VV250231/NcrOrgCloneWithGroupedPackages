<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <submitter>MDF_Access_For_Approval</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Account__c</field>
        <field>Requester_Name__c</field>
        <field>RCL__c</field>
        <field>CAM__c</field>
        <field>Request_ID__c</field>
        <field>Activity_Type__c</field>
        <field>Activity_Date__c</field>
        <field>End_Date__c</field>
        <field>Activity_Description__c</field>
        <field>Age_Days__c</field>
        <field>Total_Estimated_Cost__c</field>
        <field>Total_NCR_Estimated_Participation__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Update_CAM_Decision_Date</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>CAM__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>When partner user submit a MDF request, it comes to CAM (Channel Account Manager) for first step approval. By Default Partner Account Owner works as CAM.</description>
        <label>CAM Approval</label>
        <name>CAM_Approval</name>
        <rejectionActions>
            <action>
                <name>MDF_Rejection_Notification_to_Partner</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_CAM_Decision_Date</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>UpdateFundRequestStatusToRejected</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Update_RCL_Approval_Date</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>RCL__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Once CAM approved the request, It comes to RCL for approval.</description>
        <label>RCL Approval</label>
        <name>RCL_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>MDF_Rejection_Notification_to_Partner</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_RCL_Approval_Date</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>UpdateFundRequestStatusToRejected</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Fund_Request_Approved</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Send_Notification_Email_process03</name>
                <type>Alert</type>
            </action>
            <action>
                <name>UpdateFundRequestStatusToApproved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Channel_Operation_Team</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Operation team for final approval.</description>
        <label>Operation Team Approval</label>
        <name>Operation_Team_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>MDF_Rejection_Notification_to_Partner</name>
                <type>Alert</type>
            </action>
            <action>
                <name>UpdateFundRequestStatusToRejected</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>NPC-575 - Removing Lois Kemp</description>
    <emailTemplate>MDFEmailTemplates/Fund_Request_Approval_Alert_VF_V2</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>SFDC_MDF__c.Status__c</field>
            <operation>equals</operation>
            <value>Request Created</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Update_Approved_Date</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Update_Approved_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Record_Lock_Field_to_Unloack1</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Acknowledgement_Mail_for_the_MDF_Requester</name>
            <type>Alert</type>
        </action>
        <action>
            <name>MDF_request_submission_Alert_to_NCR_InteractMDF_ncr_com</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Record_Lock_Field</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Request_submission_date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Status_to_Submitted_for_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>MDF Request Approval Process 03</label>
    <processOrder>6</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
