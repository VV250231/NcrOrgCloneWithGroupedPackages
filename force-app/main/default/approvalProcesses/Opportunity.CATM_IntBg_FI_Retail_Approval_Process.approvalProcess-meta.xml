<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Overall_Contract_Value__c</field>
        <field>Annual_Contract_Value__c</field>
        <field>Num_of_ATMs__c</field>
        <field>Contract_Term_Mths__c</field>
        <field>CloseDate</field>
        <field>Products__c</field>
        <field>EBITA_Margin__c</field>
        <field>EBITDA_Margin__c</field>
        <field>IRR__c</field>
        <field>StageName</field>
        <field>Expected_Service_Start_Date__c</field>
        <field>Win_Loss_Reason__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Email_Rep_Opportunity_was_Approved</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_Deal_Committee_Status</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <label>Step 1</label>
        <name>Step_1</name>
        <rejectionActions>
            <action>
                <name>Email_Rep_Opportunity_was_Rejected</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Set_Probability_to_50</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Deal_Committee_Status2</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Opportunity.Opportunity_Classification__c</field>
            <operation>equals</operation>
            <value>CATM - FI,CATM - Retail (Corporate)</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.Geography__c</field>
            <operation>equals</operation>
            <value>UK,ROI,New Zealand,Australia,Spain,Germany</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.CATM_Record__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>CATM: IntBg FI &amp; Retail Approval Process</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
