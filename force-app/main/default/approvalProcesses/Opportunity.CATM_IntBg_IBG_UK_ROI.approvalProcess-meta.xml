        <criteriaItems>
            <field>Opportunity.Opportunity_Classification__c</field>
            <operation>contains</operation>
            <value>IBG</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.CATM_Record__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.Geography__c</field>
            <operation>equals</operation>
            <value>UK</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.Geography__c</field>
            <operation>equals</operation>
            <value>ROI</value>
