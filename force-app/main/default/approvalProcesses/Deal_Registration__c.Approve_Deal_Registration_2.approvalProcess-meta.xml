<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Channel_Partner_Company_Name__c</field>
        <field>Channel_Partner_Key_Contact__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>NCR_Account_Manager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>CAM approval</label>
        <name>CAM_approval</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Update_Next_Approver</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>NCR_Account_Senior_Manager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Deal_Registration__c.NCR_Account_Senior_Manager__c</field>
                <operation>notEqual</operation>
                <value>NULL</value>
            </criteriaItems>
        </entryCriteria>
        <label>Sales Leader Approval</label>
        <name>Sales_Leader_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 OR 2</booleanFilter>
        <criteriaItems>
            <field>Deal_Registration__c.Status__c</field>
            <operation>equals</operation>
            <value>Created</value>
        </criteriaItems>
        <criteriaItems>
            <field>Deal_Registration__c.Status__c</field>
            <operation>equals</operation>
            <value>Approved</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>DealRegReqStatusApproved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Final_Approval_Email_to_CAM</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Final_Approval_Email_to_Deal_Reg_Owner</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Approval</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Deal_Registration_Approval_Date</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>DealRegReqStatusRejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Final_Rejection_Email_to_Deal_Reg_Owner</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Deal_Registration_Approval_Date</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Deal_Registration_Acknowledgment</name>
            <type>Alert</type>
        </action>
        <action>
            <name>DealRegReqStatusSubmitted</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Approval_Completion_Date_to_NULL</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Approve Deal Registration 2</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
