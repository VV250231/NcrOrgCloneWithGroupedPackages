<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Extension_Decision_Date_Update</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Increase_Expiration_Date_by_90</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Extension_Status_to_Approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>NCR_Account_Manager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Request to CAM</label>
        <name>Request_to_CAM</name>
        <rejectionActions>
            <action>
                <name>Extension_count_decrease_by_1</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Extension_Decision_Date_Update</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Extension_Status_to_Reject</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <emailTemplate>Deal_Registration_Templates/Partner_Requested_a_DR_Extension</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Deal_Registration__c.Status__c</field>
            <operation>equals</operation>
            <value>Approved</value>
        </criteriaItems>
        <criteriaItems>
            <field>Deal_Registration__c.Extension_Status__c</field>
            <operation>notEqual</operation>
            <value>Submitted</value>
        </criteriaItems>
        <criteriaItems>
            <field>Deal_Registration__c.Extension_Increment_Count__c</field>
            <operation>lessThan</operation>
            <value>2</value>
        </criteriaItems>
        <criteriaItems>
            <field>Deal_Registration__c.Remaining_Days__c</field>
            <operation>lessThan</operation>
            <value>15</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Extension_Request_Approval</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Extension_Request_was_not_approved</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Extension_Increment_Count_plus_1</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Extension_Status_Submitted</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Extension_Submission_Date_Update</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Extension Approval 1.0</label>
    <processOrder>4</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
