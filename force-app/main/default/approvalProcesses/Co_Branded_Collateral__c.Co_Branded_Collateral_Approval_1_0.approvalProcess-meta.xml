<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Partner_Account__c</field>
        <field>Partner_Contact__c</field>
        <field>Partner_Email_Address__c</field>
        <field>Campaign_Name__c</field>
        <field>Final_dimensions_you_need__c</field>
        <field>What_is_your_deadline__c</field>
        <field>What_kind_of_document_are_you_requesting__c</field>
        <field>Owner</field>
        <field>CreatedBy</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>dr185073@ncr.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Marketing Concierge Approver Queue</label>
        <name>Marketing_Concierge_Approver_Queue</name>
    </approvalStep>
    <emailTemplate>Co_Branded_Collateral_Template/Marketng_Concierge_Acknowledgement</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Co_Branded_Collateral__c.Status__c</field>
            <operation>equals</operation>
            <value>Draft</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Change_status_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Change_status_to_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Change_status_to_Submitted</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Submitter_Acknowledgement</name>
            <type>Alert</type>
        </action>
    </initialSubmissionActions>
    <label>Co-Branded Collateral Approval 1.0</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
