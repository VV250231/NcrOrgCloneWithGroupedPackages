<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Engineer_Portal_Access_Approver</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>NSC.portal</label>
        <name>NSCPortal</name>
    </approvalStep>
    <emailTemplate>Engineer_Email_Templates/Engineer_Request_Alert_VF</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Engineers__c.Type_of_Portal_Access__c</field>
            <operation>equals</operation>
            <value>Portal Access</value>
        </criteriaItems>
        <criteriaItems>
            <field>Engineers__c.Status__c</field>
            <operation>equals</operation>
            <value>Created,Rejected</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Engineer_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Engineer_Request_Approval_alert_to_partner</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Portal_Access_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Engineer_Request_Rejection_Alert_to_Partner</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Reject_Update</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Engineer_Request_Acknowledgement_to_partner</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Engineer_Request_mail_to_Activation_Channel_ncr_com</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Submitted_for_Portal_Access</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Type of Portal Access - Portal Access</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
