<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>52.0</apiVersion>
    <decisions>
        <name>Parent_Triggered</name>
        <label>Parent Triggered</label>
        <locationX>167</locationX>
        <locationY>361</locationY>
        <defaultConnectorLabel>Default</defaultConnectorLabel>
        <rules>
            <name>Yes_Trigger_Parent</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.qtc_Multi_Site_Relationship__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Parent</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Child_Quotes</targetReference>
            </connector>
            <label>Yes - Trigger Parent</label>
        </rules>
        <rules>
            <name>Yes_Trigger_Child</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.qtc_MS_Parent_Payments_Solution_Text__c</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <elementReference>$Record.qtc_Multi_Site_Parent_Quote__r.qtc_Payments_Solution__c</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Child_Quote</targetReference>
            </connector>
            <label>Yes - Trigger Child</label>
        </rules>
    </decisions>
    <description>Due to a CPQ limitation, we need to stamp on to child quotes the payments solution of the parent. This flow will update that value if the child changes or if the value on the parent quote changes.</description>
    <interviewLabel>CPQ - Update Multi-Site Parent Payments Solution {!$Flow.CurrentDateTime}</interviewLabel>
    <label>CPQ - Update Multi-Site Parent Payments Solution</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>FREE_FORM_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>Update_Child_Quote</name>
        <label>Update Child Quote</label>
        <locationX>350</locationX>
        <locationY>517</locationY>
        <inputAssignments>
            <field>qtc_MS_Parent_Payments_Solution_Text__c</field>
            <value>
                <elementReference>$Record.qtc_Multi_Site_Parent_Quote__r.qtc_Payments_Solution__c</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <recordUpdates>
        <name>Update_Child_Quotes</name>
        <label>Update Child Quotes</label>
        <locationX>459</locationX>
        <locationY>317</locationY>
        <filterLogic>and</filterLogic>
        <filters>
            <field>qtc_Multi_Site_Parent_Quote__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>$Record.Id</elementReference>
            </value>
        </filters>
        <inputAssignments>
            <field>qtc_MS_Parent_Payments_Solution_Text__c</field>
            <value>
                <elementReference>$Record.qtc_Payments_Solution__c</elementReference>
            </value>
        </inputAssignments>
        <object>SBQQ__Quote__c</object>
    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>50</locationY>
        <connector>
            <targetReference>Parent_Triggered</targetReference>
        </connector>
        <filterLogic>(1 AND ((2 AND 3) OR 4)) OR 5</filterLogic>
        <filters>
            <field>qtc_Multi_Site_Type__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>AE+PP</stringValue>
            </value>
        </filters>
        <filters>
            <field>qtc_Multi_Site_Relationship__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Parent</stringValue>
            </value>
        </filters>
        <filters>
            <field>qtc_Payments_Solution__c</field>
            <operator>IsChanged</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <filters>
            <field>qtc_Multi_Site_Relationship__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Child</stringValue>
            </value>
        </filters>
        <filters>
            <field>qtc_Multi_Site_Parent_Payments_Solution__c</field>
            <operator>IsChanged</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <object>SBQQ__Quote__c</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
