    <decisions>
        <name>Check_New_Account</name>
        <label>Check New Account</label>
        <locationX>384</locationX>
        <locationY>349</locationY>
        <defaultConnector>
            <targetReference>Update_Account_fields</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>New_Account</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>IsNewAccount</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.CDM_Account_Manager__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>IsSystemAdmin</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Get_Account_Owner</targetReference>
            </connector>
            <label>New Account</label>
        </rules>
    </decisions>
    <description>Updates the Account Region, Business Unit, Department, and Geography fields.</description>
    <environments>Default</environments>
    <formulas>
        <name>IsNewAccount</name>
        <dataType>Boolean</dataType>
        <expression>ISNEW()</expression>
    </formulas>
    <formulas>
        <name>IsSystemAdmin</name>
        <dataType>Boolean</dataType>
        <expression>AND(NOT(ISBLANK({!$Record.CDM_Account_Manager__c})), 
OR(
UPPER({!$Record.CDM_Account_Manager__c}) = &apos;NA230205&apos;,
UPPER({!$Record.CDM_Account_Manager__c}) = &apos;ADMINNSC&apos;,
UPPER({!$Record.CDM_Account_Manager__c}) =  &apos;ADMINNSC&apos;))</expression>
    </formulas>
