        </connector>
        <filterFormula>AND(
{!$Setup.Automation_Setting__c.Skip_Flow__c} = false,
OR(
AND(
ISNEW()
),
AND(
ISCHANGED({!$Record.OwnerId}),
OR(
TEXT({!$Record.Owner.CATM_Region__c})&lt;&gt;{!$Record.CATM_Region__c},
TEXT({!$Record.Owner.Geography__c})&lt;&gt;{!$Record.Geography__c},
TEXT({!$Record.Owner.Business_Unit__c})&lt;&gt;{!$Record.Business_Unit__c},
