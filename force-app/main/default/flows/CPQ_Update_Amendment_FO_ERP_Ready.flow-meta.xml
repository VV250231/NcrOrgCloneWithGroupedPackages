        <label>Update FO</label>
        <locationX>50</locationX>
        <locationY>408</locationY>
        <inputAssignments>
            <field>Order_Interface_Status__c</field>
            <value>
                <stringValue>ERP Ready</stringValue>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <recordUpdates>
        <name>Update_FOP</name>
        <label>Update FOP</label>
        <locationX>578</locationX>
        <locationY>528</locationY>
        <filterLogic>and</filterLogic>
        <filters>
            <field>qtc_FulfillmentOrder__c</field>
