        </rules>
    </decisions>
    <decisions>
        <name>Copy_1_of_CheckQuote</name>
        <label>Copy 1 of CheckQuote</label>
        <locationX>710</locationX>
        <locationY>288</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Copy_1_of_Amendment</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.qtc_Quote__r.SBQQ__Type__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Amendment</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.qtc_Quote__r.qtc_Legal_Document_Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Completed</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Get_Document</targetReference>
            </connector>
            <label>Copy 1 of Amendment</label>
        </rules>
    </decisions>
    <description>This flow is only run for amendment quote when legal doc of quote setup prior to Autopay of bill to site and FO is created. We have another flow CPQ Update Account And Fulfillment Order which run autopay setup prior to legal doc for amendment quote upon FO creation.</description>
    <environments>Default</environments>
    <formulas>
        <name>f_SWEndDate</name>
        <dataType>Date</dataType>
        <expression>{!$Record.qtc_Quote__r.SBQQ__MasterContract__r.EndDate}</expression>
    </formulas>
    <formulas>
        <name>f_SWStartDate</name>
        <dataType>Date</dataType>
        <expression>DATEVALUE({!Get_Document.Customer_Signature_Date__c}) + 30</expression>
    </formulas>
    <interviewLabel>CPQ {!$Flow.CurrentDateTime}</interviewLabel>
    <label>CPQ Update Amendment FO ERP Ready</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordLookups>
        <name>Get_Document</name>
        <label>Get Document</label>
        <locationX>578</locationX>
        <locationY>408</locationY>
        <assignNullValuesIfNoRecordsFound>false</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>Update_FOP</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Quote__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>$Record.qtc_Quote__r.Id</elementReference>
            </value>
        </filters>
        <filters>
            <field>Document_Status__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Completed</stringValue>
            </value>
        </filters>
        <filters>
            <field>Document_Type__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>AE Amendment</stringValue>
            </value>
        </filters>
