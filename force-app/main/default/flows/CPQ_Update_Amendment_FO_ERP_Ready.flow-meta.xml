        <locationY>0</locationY>
        <connector>
            <targetReference>CheckQuote</targetReference>
        </connector>
        <object>qtc_FulfillmentOrder__c</object>
        <recordTriggerType>Create</recordTriggerType>
        <scheduledPaths>
