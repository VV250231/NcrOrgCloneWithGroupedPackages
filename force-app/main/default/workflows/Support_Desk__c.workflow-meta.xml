    <rules>
        <fullName>Send User a Closed%2FApproved%2FDenied Notification for their Support Desk Request</fullName>
        <actions>
            <name>NotificationthataSupportrequesthasbeenclosed</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <description>This will send a Support Desk request owner an e-mail notification when their Support Desk Request is closed/approved/denied.</description>
        <formula>AND ( ISCHANGED( Request_Status__c),      OR( ISPICKVAL(Request_Status__c , &apos;Approved&apos;),  	ISPICKVAL(Request_Status__c , &apos;Denied&apos;),         AND ( ISPICKVAL(Request_Status__c , &apos;Completed&apos;), 	      Date_Closed__c  &gt;= DATE(2000,1,1)         )     )  )</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
