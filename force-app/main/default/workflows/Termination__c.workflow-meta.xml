    <rules>
        <fullName>Legal Team  Removal Request FI</fullName>
        <actions>
            <name>AUS_FI_Approval_Email</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <formula>AND( NOT($Setup.Automation_Setting__c.Skip_Flow__c), (OR(RecordType.Name=&apos;Removals&apos;, RecordType.Name=&apos;Terminations&apos;)), ISPICKVAL(Termination_Status__c,&apos;Pending Removal&apos;), $Profile.Name =&apos;CATM - Legal Team&apos;, RecordType.Name=&apos;Removals&apos;, ISPICKVAL(Geography__c,&apos;Australia&apos;),ISPICKVAL(Business_Unit__c ,&apos;FI&apos;))</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
