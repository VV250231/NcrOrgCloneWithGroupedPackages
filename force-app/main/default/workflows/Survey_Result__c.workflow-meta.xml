<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Partner_Survey_email_alert</fullName>
        <description>Partner Survey email alert</description>
        <protected>false</protected>
        <recipients>
            <type>accountOwner</type>
        </recipients>
        <senderAddress>steve.thoma@ncr.com</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>unfiled$public/Survey_Completed</template>
    </alerts>
    <alerts>
        <fullName>SendNotificationToAccountOwnerFinancial</fullName>
        <description>SendNotificationToAccountOwnerFinancial</description>
        <protected>false</protected>
        <recipients>
            <field>AccountOwnerEmail__c</field>
            <type>email</type>
        </recipients>
        <recipients>
            <type>owner</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/Survey_Completed_email_template</template>
    </alerts>
    <alerts>
        <fullName>SentGeneralGotificationSurvey</fullName>
        <description>SentGeneralGotificationSurvey</description>
        <protected>false</protected>
        <recipients>
            <field>AccountOwnerEmail__c</field>
            <type>email</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/Survey_Completed_email_template</template>
    </alerts>
    <alerts>
        <fullName>SurveyContactOwnerEmailAlert</fullName>
        <description>SurveyContactOwnerEmailAlert</description>
        <protected>false</protected>
        <recipients>
            <type>owner</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/Survey_Completed_email_template</template>
    </alerts>
    <alerts>
        <fullName>Survey_Result_email_trigger</fullName>
        <description>Survey Result email trigger</description>
        <protected>false</protected>
        <recipients>
            <type>accountOwner</type>
        </recipients>
        <senderAddress>steve.thoma@ncr.com</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>unfiled$public/Survey_Completed_email_template</template>
    </alerts>
    <fieldUpdates>
        <fullName>UpdateAccountOwnerEmail</fullName>
        <field>AccountOwnerEmail__c</field>
        <formula>Contact__r.Account.Owner.Email</formula>
        <name>UpdateAccountOwnerEmail</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>PopulateAccountOwnerEmail</fullName>
        <actions>
            <name>UpdateAccountOwnerEmail</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <formula>NOT(ISPICKVAL(Contact__r.Account.LOB__c,&apos;T&amp;T&apos;))</formula>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>SendNotificatoinGeneralLob</fullName>
        <actions>
            <name>SentGeneralGotificationSurvey</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <formula>AND(ISBLANK(PRIORVALUE( AccountOwnerEmail__c)),  (NOT(ISPICKVAL(Contact__r.Account.LOB__c,&apos;T&amp;T&apos;))),NOT(ISPICKVAL(Contact__r.Account.LOB__c,&apos;FINANCIAL&apos;)))</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>SendNotificatoinToAccountOwnerFinancial</fullName>
        <actions>
            <name>SendNotificationToAccountOwnerFinancial</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <formula>AND(ISBLANK(PRIORVALUE( AccountOwnerEmail__c)),ISPICKVAL(Contact__r.Account.LOB__c,&apos;FINANCIAL&apos;))</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>SendNotificatoinToContactOwner</fullName>
        <actions>
            <name>SurveyContactOwnerEmailAlert</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <formula>ISPICKVAL(Contact__r.Account.LOB__c ,  &apos;T&amp;T&apos;)</formula>
        <triggerType>onCreateOnly</triggerType>
    </rules>
</Workflow>
