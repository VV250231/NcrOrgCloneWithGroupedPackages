    <rules>
        <fullName>NCR updatefail</fullName>
        <actions>
            <name>Send_Email_to_Admin_on_Update_failed</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>NCR_EmailMessage__c.Email_Type__c</field>
            <operation>equals</operation>
            <value>NCR Update Failed</value>
        </criteriaItems>
        <description>This workflow will send email to salesforce support team when Ticket Request fail to update amount when opportunity is updated.</description>
        <triggerType>onCreateOnly</triggerType>
    </rules>
